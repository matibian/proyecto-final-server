<form onsubmit="return false" class="d-flex align-items-center flex-column">
  <div class="mb-3">
    <input type="text" id="productos" placeholder="Producto" name="name" />
  </div>
  <div class="mb-3">
    <input type="text" id="precio" placeholder="Precio" name="price" />
  </div>
  <div class="mb-3">
    <input
      type="text"
      id="description"
      placeholder="Descripción"
      name="description"
    />
  </div>
  <div class="mb-3">
    <input type="text" id="category" placeholder="Categoría" name="category" />
  </div>
  <div class="mb-3">
    <input type="number" id="stock" placeholder="Stock" name="stock" />
  </div>
  <div class="mb-3">
    <input type="text" id="more" placeholder="Mas detalles" name="more" />
  </div>
  <div>
    <label for="nov">Estrellas:</label>

    <select name="stars" id="stars">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>

    </select>
  </div>
  <div>
    <label for="nov">Novedad:</label>

    <select name="nov" id="nov">
      <option value="true">Si</option>
      <option value="false">No</option>

    </select>
  </div>
  <div class="mb-3">
    <input
      type="text"
      id="imagen"
      placeholder="URL de imagen"
      name="thumbnail"
    />
  </div>
  <button type="submit" onclick="botonProd()" class="btn btn-secondary">Subir
    producto</button>
</form>