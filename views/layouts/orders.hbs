<html lang='es'>
  <head>
    {{>head}}
  </head>
  <body>
    {{>navbar}}
    {{!-- {{>navbar}} --}}
    <br>
      <div class="row justify-content-md-center">
        <div class="col-md-10">
          <div class="card mt-4 shadow-lg p-3 mb-5 bg-white rounded" style="margin-top: 0px !important; height: 67vh; overflow:scroll">

<table class="table align-content-center" style="text-align: center; margin-bottom: 20%">
    <thead>
      <tr>
        <th scope="col">Numero de orden</th>
        <th scope="col">Usuario</th>
        <th scope="col">Dirección</th>
        <th scope="col">Envío</th>
        <th scope="col">Orden</th>
        <th scope="col">Total</th>
      </tr>
    </thead>
            {{#if orders}}
        {{#each orders}}
        <tr>
          <td>{{this.ordernumber}} </td>
          <td>{{this.buyer.mail}} </td>
          <td>{{this.buyer.address}} </td>
          <td>{{this.envio}} </td>
          <td>
            <ul>
              {{#each carrito}}
              <li style="list-style: none">{{this.name}} - ${{this.price}} - {{this.quantity}}</li>
              {{/each}}
            </ul>
          </td>
          <td>${{this.total}}</td>
        </tr>
        {{/each}}
        </tbody>
      </table>
      {{else}}
      </tbody>
      </table>
        No hay ordenes todavía
      {{/if}}
      </div>
      </div>
      </div>
      </div>


    <script src="../index.js"></script>

  </body>
   {{> footer}}
</html>
